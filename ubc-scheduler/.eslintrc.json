{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        "import/extensions": [
            "error", 
            // "always",
            // {
            //   "js": "never",
            //   "jsx": "never",
            //   "ts": "never",
            //   "tsx": "never",
            //   "ignorePackages": true,
            //   "pattern":
            {
                  "js": "never",
                  "jsx": "never",
                  "ts": "never",
                  "tsx": "never"

            }
            // }
        ],
        "indent" : ["error", 4],
        "comma-dangle" : ["error", {"functions": "never"}],
        "no-use-before-define": ["error", { "functions": false, "classes": false, "variables": false }],
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "linebreak-style" : ["error", "windows"]
        
    }
}
    

